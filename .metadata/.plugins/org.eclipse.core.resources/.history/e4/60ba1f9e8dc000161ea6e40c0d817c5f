
public class Pilha {
	
	public int[] array;
	public int top;
	private boolean isFull;
	
	public Pilha(int size) {
		this.top = -1;
		this.array = new int[size];
	}
	
	public int top() {
		if(this.isEmpty()) {
			return -1;
		}
		return array[top];
	}

	public boolean isEmpty() {
		if(this.top == -1) {
			return true;
		}
		return false;
	}
	
	public int size() {
		if(this.isEmpty()) {
			return 0;
		}
		return this.top+1;
		
	}
	
	public void pop() {
		
	}
	
	public void push(int n) throws Exception {
		if(this.isFull) {
			throw new Exception();
		}
		this.array[++top] = n;	
	}
}
